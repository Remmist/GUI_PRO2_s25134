<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="boardWindow" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Game.BoardController">
    <center>
        <Pane fx:id="gameBoard" BorderPane.alignment="CENTER" />
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="50.0">
            <Text fx:id="appTime">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            <font>
               <Font size="9.0" />
            </font>
            </Text>
        </HBox>
    </bottom>
</BorderPane>
